@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Greenmaster.Core.Models.ViewModels.PlaceableViewModel

@{
    ViewBag.Title = "Create plant";
    Layout = "_Layout";
}

<h2>Create new plant</h2>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Placeable" asp-action="CreatePlant" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specie" class="control-label"></label>
                <select asp-for="Specie" class="form-control" asp-items="ViewBag.Species"></select>
                <span asp-validation-for="Specie" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Placeable" asp-action="Index">Back to List</a>
</div>