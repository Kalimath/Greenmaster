@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Greenmaster.Core.Models.ViewModels.GardenStyleViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Update</h2>

<h4>@(Model.Name)</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="GardenStyle" asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Concepts" class="control-label"></label>
                <select asp-for="Concepts" class="form-control" asp-items="ViewBag.Concepts" multiple></select>
                <span asp-validation-for="Concepts" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Colors" class="control-label"></label>
                <select asp-for="Colors" class="form-control" asp-items="ViewBag.Colors" multiple></select>
                <span asp-validation-for="Colors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shapes" class="control-label"></label>
                <select asp-for="Shapes" class="form-control" asp-items="ViewBag.Shapes" multiple></select>
                <span asp-validation-for="Shapes" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="RequiresLargeGarden" class="control-label"></label>
                <input type="checkbox" asp-for="RequiresLargeGarden" class="form-check-inline"/>
                <span asp-validation-for="RequiresLargeGarden" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AllSeasonInterest" class="control-label"></label>
                <input type="checkbox" asp-for="AllSeasonInterest" class="form-check-inline"/>
                <span asp-validation-for="AllSeasonInterest" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DivideIntoRooms" class="control-label"></label>
                <input type="checkbox" asp-for="DivideIntoRooms" class="form-check-inline"/>
                <span asp-validation-for="DivideIntoRooms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaterialTypeIds" class="control-label"></label>
                <select asp-for="MaterialTypeIds" class="form-control" asp-items="ViewBag.MaterialTypes" multiple></select>
                <span asp-validation-for="MaterialTypeIds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuitablePlantGenera" class="control-label"></label>
                <select asp-for="SuitablePlantGenera" class="form-control" asp-items="ViewBag.PlantGenera" multiple></select>
                <span asp-validation-for="SuitablePlantGenera" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Rendering" asp-action="Index">Back to List</a>
</div>