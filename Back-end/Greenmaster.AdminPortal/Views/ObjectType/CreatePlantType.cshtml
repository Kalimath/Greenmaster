@using Microsoft.AspNetCore.Mvc.TagHelpers
@model PlantType

@{
    ViewBag.Title = "Create plant-type";
    Layout = "_Layout";
}

<h1>Create</h1>

<h4>Plant-type</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="ObjectType" asp-action="CreatePlantType" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Canopy" class="control-label"></label>
                <select asp-for="Canopy" class="form-control" asp-items="ViewBag.Canopy"></select>
                <span asp-validation-for="Canopy" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="AllowAsUndergrowth" class="control-label"></label>
                <input type="checkbox" asp-for="AllowAsUndergrowth" class="form-check-inline"/>
                <span asp-validation-for="AllowAsUndergrowth" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

