@model IEnumerable<Greenmaster_ASP.Models.Arboretum.Specie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ScientificName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SunRequirement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WaterRequirement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlowerInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dimensions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lifecycle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ScientificName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SunRequirement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WaterRequirement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlowerInfo.FlowerDataId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dimensions.DimensionsId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lifecycle)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SpecieId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SpecieId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SpecieId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
