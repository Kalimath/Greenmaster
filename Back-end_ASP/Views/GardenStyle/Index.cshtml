@model IEnumerable<Greenmaster_ASP.Models.Design.GardenStyle>

@{
    ViewBag.Title = "GardenStyles";
    Layout = "_Layout";
}

<h1>Garden styles</h1>

<p>
    <a class="btn btn-primary" asp-controller="GardenStyle" asp-action="CreateGardenStyle">Add new style</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequiresLargeGarden)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequiresLargeGarden)
                </td>
                <td>
                    <a asp-controller="GardenStyle" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                    | <a class="disabled" asp-controller="GardenStyle" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                    | <a class="disabled" asp-controller="GardenStyle" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
